@model Employee_Project.ViewModels.EmployeeListViewModel
@{
    ViewBag.Title = "Home Page";
}

    
        <h1 style="text-align:center"> Employees </h1>

        <div class="col-md-2">
            <h4>Filter By Department</h4>
            <div class="list-group">
                @Html.ActionLink("All", "Index", null, new { @class = Request["Department"] == null ? "list-group-item active" : "list-group-item" })
                @foreach (var dept in Model.EmployeeDepartments)
                {
                    @Html.ActionLink(dept.Department, "Index", new { Department = dept.Department }, new { @class = Request["Department"] == dept.Department ? "list-group-item active" : "list-group-item" })
                }
            </div>
        </div>
        <div class="col-md-10">
            @foreach (var item in Model.Employees)
            {
                <div class="col-md-4" style="height:450px; padding:10px; margin:10px; border:solid thin whitesmoke">
                    <div class="col-md-12">
                        <img class="img" style="height:250px" src="~/Content/ProductImages/@item.Image" />
                    </div>

                    <div class="col-md-12">
                        <strong>@Html.ActionLink(item.Name, "Details", new { Empid = item.EmpId })</strong>
                    </div>
                    <div class="col-md-12">
                        <p>@item.Address</p>
                    </div>
                    <div class="col-md-12">
                        <p>@item.Department</p>
                    </div>

                </div>

            }
        </div>
    
    
<div class="col-md-12 clearfix"></div>
